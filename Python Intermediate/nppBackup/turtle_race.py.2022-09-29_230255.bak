import turtle
from turtle import Turtle, Screen, colormode
turtle.colormode(255)
import random
var = Turtle()
screen = Screen()
screen.setup(width = 700, height = 700)
edd = ["a", "b", "c", "d"]

user_bet = screen.textinput(title = "MAKE YOUR BET!ðŸ¦‹", prompt = "Which turtle will win the race? Pick a colour: ")
all_turtle = []
speed = [1, 2, 3, 4, 5]
num = [0, 1, 2, 3, 4]

def state(get, rad):
	color_list = [(95, 158, 160), (100, 149, 237), (176, 196, 222), (147, 112, 219), (255, 192, 203), (255, 218, 185), (255, 105, 180), (176, 224, 230), (135, 206, 250), (255, 20, 147), (221, 160, 221)]
	get.color("white")
	get.speed(random.choice(speed))
	for n in range(5):
		get = Turtle()
		get.shape("turtle")
		get.penup()
		get.color(color_list[n])
		get.setheading(270)
		get.forward(n * 70)
		get.setheading(0)
		get.backward(300)
		all_turtle.append(get)
	
	race_on = False
	while not race_on:
		road = 10 * (random.choice(speed))
		for turt in all_turtle:
			if turt.xcor() < 620:
				all_turtle[random.choice(num)].forward(road)
			elif turt.xcor() >= 620:
				winning_color = turtle.pencolor()
				if winning_color == user_bet:
					print(f"You've won. The {winning_color} turtle is the winner")
					race_on = True
				else:
					print(f"You've lost. The {winning_color} turtle is the winner")
					race_on = True

state(var, edd)

