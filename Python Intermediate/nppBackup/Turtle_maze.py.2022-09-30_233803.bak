colours = ["pale violet red", "hot pink", "cornflower blue", "steel blue", "light sky blue", "violet", "pink"]
starting_pos = [(0, 0), (-20, 0), (-40, 0)]
segments = []
for position in starting_pos:
	new_segment = Turtle("square")
	new_segment.color(random.choice(colours))
	new_segment.penup()
	new_segment.goto(position)
	segments.append(new_segment)

def forward():
	segments.forward(70)
def right():
	segments.right(90)
def left():
	segments.left(90)

game_on = True
while game_on:
	screen.update()
	for seg in range(len(segments) - 1, 0, -1):
		new_x = segments[seg - 1].xcor()
		new_y = segments[seg - 1].ycor()
		segments[seg].goto(new_x, new_y)

screen.onkey(key = "space", fun = forward)
screen.onkey(key = "Up", fun = right)
screen.onkey(key = "Down", fun = left)

