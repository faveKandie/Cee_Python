import turtle
from turtle import Turtle, Screen, colormode
turtle.colormode(255)
import random
screen = Screen()
screen.setup(width = 700, height = 700)

get = Turtle()
race_on = True
user_bet = screen.numinput(title = "WELCOME TO TURTLE RACE!ðŸ¦‹", prompt = "How many players are there?: ")
rad = int(user_bet)
all_turtle = []
screen.listen()

color_list = ["pink", "red", "blue", "green", "orange"]
get.color("white")
for n in range(rad):
	get = Turtle()
	get.shape("turtle")
	get.penup()
	get.color(color_list[n])
	get.setheading(270)
	get.forward(n * 70)
	get.setheading(0)
	get.backward(300)
	all_turtle.append(get)

def forward():
	color_list[0].forward(5)

if user_bet:
	race_on = False
screen.onkey(key = "f", fun = forward)

while not race_on:
	for turt in all_turtle:
		if turt.xcor() > 330:
			race_on = True
			winning_color = turt.pencolor()
			if winning_color == user_bet:
				print(f"You've won. The {winning_color} turtle is the winner")
			else:
				print(f"You've lost. The {winning_color} turtle is the winner")

