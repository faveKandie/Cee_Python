from turtle import Turtle, Screen

var = Turtle()#accessingthe Turtle class
screen = Screen()#accessing the Screen class
var.shape("turtle")
var.color("deep pink")

screen.listen()#accessing the screen methods

def move_forward():
	var.forward(100)

def up_ward():
	var.right(90)

screen.onkey(key = "Down", fun = move_forward)
screen.onkey(key = "Up", fun = up_ward)
screen.exitonclick()
