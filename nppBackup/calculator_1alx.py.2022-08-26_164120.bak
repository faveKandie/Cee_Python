def add(c, d):
    result = c + d
    print(f"The sum of {c} and {d} is {result}")
def div(c, d):
    if c > d:
        result = c / d
        print(f"""
        {c} is greater than {d}.
        Therefore, {c} / {d} is {result}
        """)
    else:
        result = d / c
        print(f"""
        {d} is greater than {c}.
        Therefore, {d} / {c} is {result}
        """)
def mult(c, d):
    result = c * d
    print(f"The product of {c} and {d} is {result}")
def subt(c, d):
    result = c - d
    print(f"The result you get from subtracting {c} from {d} is {result}")

